{
  "manifest_version": 3,
  "name": "eBay Product Collector",
  "version": "0.1.0",
  "description": "Scrape eBay product data and send it to WooCommerce in one click.",
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Import this eBay product"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://www.ebay.com/*",
    "https://www.ebay.co.uk/*",
    "https://*.ebay.*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "options_page": "options/options.html"
}
